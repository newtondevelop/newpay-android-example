<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000"
    android:id="@+id/rootView"
    android:descendantFocusability="beforeDescendants"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/confirmLayout"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:layout_height="450dp"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/confirmTitleLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pay_linearlayout_item"
            >
            <ImageButton
                android:id="@+id/closeBt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/semitransparentWhite"
                android:src="@mipmap/icon_close"
                android:padding="@dimen/big_padding"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/main_black"
                android:maxLines="1"
                android:text="@string/payment_details"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
        <TextView
            android:id="@+id/amountTextView"
            app:layout_constraintTop_toBottomOf="@id/confirmTitleLayout"
            android:padding="@dimen/big_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/main_black"
            android:textSize="20sp"
            />
        <LinearLayout
            android:id="@+id/receiveLayout"
            app:layout_constraintTop_toBottomOf="@id/amountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/big_padding"
            android:background="@drawable/bg_pay_linearlayout_item"
            >
            <TextView
                style="@style/pop_left_textview"
                android:text="@string/receive_address"
                />
            <TextView
                style="@style/pop_right_textview"
                android:id="@+id/toAddressTextView"
                android:ellipsize="middle"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sendLayout"
            app:layout_constraintTop_toBottomOf="@id/receiveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/big_padding"
            >
            <TextView
                style="@style/pop_left_textview"
                android:text="@string/send_address"
                />
            <TextView
                style="@style/pop_right_textview"
                android:id="@+id/fromAddressTextView"
                android:ellipsize="middle"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/bg_pay_linearlayout_item"
            android:id="@+id/gasPriceLayout"
            app:layout_constraintTop_toBottomOf="@id/sendLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/big_padding"
            android:visibility="gone"
            >
            <TextView
                style="@style/pop_left_textview"
                android:text="Gas Price"
                />
            <TextView
                style="@style/pop_right_textview"
                android:id="@+id/gasPriceTextView"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gasLimitLayout"
            app:layout_constraintTop_toBottomOf="@id/gasPriceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/big_padding"
            android:visibility="gone"
            >
            <TextView
                style="@style/pop_left_textview"
                android:text="Gas Limit"
                />
            <TextView
                style="@style/pop_right_textview"
                android:id="@+id/gasLimitTextView"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/commentLayout"
            app:layout_constraintTop_toBottomOf="@id/gasLimitLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/big_padding"
            android:background="@drawable/bg_pay_linearlayout_item"
            android:visibility="gone"
            >
            <TextView
                style="@style/pop_left_textview"
                android:text="@string/comments"
                />
            <TextView
                style="@style/pop_right_textview"
                android:id="@+id/commentTextview"
                android:ellipsize="end"
                android:text="@string/comments"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gasFeeLayout"
            app:layout_constraintTop_toBottomOf="@id/commentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/big_padding"
            android:background="@drawable/bg_pay_linearlayout_item"
            >
            <TextView
                style="@style/pop_left_textview"
                android:text="@string/fee"
                />
            <TextView
                style="@style/pop_right_textview"
                android:id="@+id/gasFeeTextView"
                android:text="0.00 NEW"
                />
        </LinearLayout>
        <Button
            android:id="@+id/enterPasswordButton"
            style="@style/main_button"
            android:text="@string/pay_now"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/normal_margin"
            />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/signLayout"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_height="450dp">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/sendTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_pay_linearlayout_item"
            >
            <ImageButton
                android:padding="@dimen/big_padding"
                android:id="@+id/closeButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent_color"
                android:src="@mipmap/icon_close" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_black"
                android:textSize="16sp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="@string/confirm_password"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/sendTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_padding"
            android:paddingLeft="@dimen/big_padding"
            android:background="@drawable/bg_import_tab_layout"
            >
            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_color"
                android:gravity="center|left"
                android:padding="@dimen/normal_padding"
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                />
            <TextView
                android:id="@+id/confirmButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/big_padding"
                android:paddingRight="@dimen/big_padding"
                android:textColor="@color/mainColor"
                android:textSize="16sp"
                android:background="@drawable/bg_import_tab_layout"
                android:text="@string/confirm"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>