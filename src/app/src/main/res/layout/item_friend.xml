<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/itemContactsLinearLayout"
    android:background="@color/white"
    android:padding="@dimen/normal_padding">

    <TextView
        android:id="@+id/nameTextView"
        android:textSize="@dimen/transaction_textview_title_size"
        android:textColor="@color/transaction_textview_title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"/>

    <TextView
        android:layout_marginRight="@dimen/big_margin"
        android:id="@+id/addressTextView"
        android:textSize="@dimen/transaction_textview_detail_size"
        android:textColor="@color/transaction_textview_detail_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="middle"
        android:typeface="monospace"
        android:text="address"/>
</LinearLayout>