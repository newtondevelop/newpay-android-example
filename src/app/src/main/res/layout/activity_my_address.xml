<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <include
        android:id="@+id/includeTool"
        layout="@layout/layout_toolbar_with_title"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        app:layout_constraintTop_toBottomOf="@id/includeTool"
        android:layout_margin="@dimen/big_margin"
        app:cardCornerRadius="@dimen/normal_margin"
        app:cardElevation="3dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="408dp"
            android:background="@drawable/bg_node_detail_card"
            >
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="408dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_newcard_bg"
                />
            <ImageView
                android:id="@+id/logo"
                android:layout_width="104dp"
                android:layout_height="28dp"
                android:src="@drawable/logo_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="@dimen/big_margin"
                android:layout_marginLeft="@dimen/big_margin"
                />
            <TextView
                android:id="@+id/walletNameTextView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="@dimen/big_margin"
                android:layout_marginRight="@dimen/big_margin"
                style="@style/receive_wallet_name"
                />
            <TextView
                android:id="@+id/address"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo"
                android:layout_marginTop="@dimen/big_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:typeface="monospace"
                android:textSize="12sp"
                android:layout_marginLeft="@dimen/big_padding"
                android:layout_marginRight="@dimen/big_padding"
                android:textColor="@color/white"
                />
            <android.support.constraint.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:background="@drawable/bg_receive_qrcode"
                android:layout_marginTop="@dimen/normal_margin"
                >
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:id="@+id/qr_image"
                    app:srcCompat="@drawable/ic_autorenew_black_24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="230dp"
                    android:layout_height="230dp"
                    />
                <TextView
                    android:id="@+id/amountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toBottomOf="@id/qr_image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="18sp"
                    android:visibility="gone"
                    />
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:id="@+id/shareTipTextView"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="@string/address_tip"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:textColor="@color/bgColor"
                android:textSize="14sp"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/setAmountButton"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/big_margin"
        android:text="@string/set_account"
        android:textColor="@color/mainColor"
        style="@style/receive_wallet_address"
        />
    <TextView
        android:id="@+id/copy_action"
        app:layout_constraintTop_toBottomOf="@id/setAmountButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/receive_wallet_address"
        android:textColor="@color/mainColor"
        android:text="@string/click_qrcode_copy_address"
        />
</android.support.constraint.ConstraintLayout>