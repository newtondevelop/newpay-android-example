<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include layout="@layout/layout_toolbar_with_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            style="@style/add_friend_textview"
            android:text="@string/name"
            android:layout_marginTop="@dimen/big_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_wallet_item"
            android:padding="@dimen/normal_padding"
            >
            <EditText
                android:id="@+id/nameEdittext"
                android:hint="@string/name"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/zxing_transparent"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="@dimen/big_padding"
                />
        </LinearLayout>
        <TextView
            style="@style/add_friend_textview"
            android:text="@string/address"
            />
        <LinearLayout
            android:id="@+id/receive_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_wallet_item"
            android:padding="@dimen/normal_padding"
            >
            <EditText
                android:id="@+id/addressEdittext"
                android:hint="@string/address"
                android:inputType="text"
                android:maxLines="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@color/zxing_transparent"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/big_padding"
                android:paddingEnd="@dimen/big_padding"
                />
            <ImageButton
                android:id="@+id/scanImageButton"
                android:src="@mipmap/scan_black"
                android:contentDescription="@string/scan_qr"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/zxing_transparent"
                />
        </LinearLayout>
        <Button
            android:id="@+id/confirm_button"
            style="@style/main_button"
            android:text="@string/confirm"
            android:layout_marginTop="@dimen/big_margin"
            />
    </LinearLayout>
</LinearLayout>