<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <include layout="@layout/layout_toolbar_with_title"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/succeedlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/includeTool"
        android:layout_marginTop="?actionBarSize"
        android:layout_marginLeft="@dimen/big_margin"
        android:layout_marginRight="@dimen/big_margin"
        >
        <ImageView
            android:id="@+id/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_proc_backup"
            />
        <TextView
            android:id="@+id/titleTextView"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            style="@style/create_wallet_tip"
            android:text="@string/text_confirm_backup"
            />
        <TextView
            android:id="@+id/tip1"
            app:layout_constraintTop_toBottomOf="@id/titleTextView"
            style="@style/backup_wallet_tip"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/backup_confirm_tip"
            />
        <EditText
            android:id="@+id/mnemonicEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:padding="@dimen/big_padding"
            android:gravity="left"
            android:background="@drawable/bg_mnemonic_edittext"
            app:layout_constraintTop_toBottomOf="@id/tip1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16sp"
            android:lines="5"
            />
        <Button
            android:id="@+id/continueButton"
            style="@style/main_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="@dimen/button_bottom"
            android:text="@string/text_continue"
            />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>