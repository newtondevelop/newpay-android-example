<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:padding="@dimen/normal_padding"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.newtonproject.newtoncore.android.widget.EasyCopyTextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:maxWidth="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:typeface="monospace"
        android:ellipsize="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:singleLine="true"
        />
    <ImageView
        android:id="@+id/luckyImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/nameTextView"
        app:layout_constraintBottom_toBottomOf="@id/nameTextView"
        app:layout_constraintStart_toEndOf="@id/nameTextView"
        android:layout_marginLeft="@dimen/small_margin"
        android:src="@mipmap/icon_lucky"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/luckyTextView"
        app:layout_constraintTop_toTopOf="@id/luckyImageView"
        app:layout_constraintBottom_toBottomOf="@id/luckyImageView"
        app:layout_constraintStart_toEndOf="@id/luckyImageView"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_lucky"
        android:textColor="@color/redLucky"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/redeemAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="end"
        />
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="end"
        />
</android.support.constraint.ConstraintLayout>